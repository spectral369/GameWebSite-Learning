<input type="password" pattern="([A-z0-9À-ž]).{5,}" id="password" name="password" placeholder="Password"  required oninput="setCustomValidity(''); checkValidity(); setCustomValidity(validity.valid ? '' :'Minimum length is 6 characters!');" />
 <label for="password2">Re-type your Password:</label>
<input type="password" id="password2" name="password2" placeholder="Password" required>
<script>var password = document.getElementById("password")
, confirm_password = document.getElementById("password2");

function validatePassword(){
if(password.value != confirm_password.value) {
  confirm_password.setCustomValidity("Passwords Don't Match");
} else {
  confirm_password.setCustomValidity('');
}
}

password.onchange = validatePassword;
confirm_password.onkeyup = validatePassword;</script>
<label for="email">Email:</label>
<input type="email" id="email" name="email" placeholder="Email" required>
