 <div id="register">
   {{#if errors}}
<script>
    // Run on page load
    window.onload = function() {

       

        // If values are not blank, restore them to the fields
        var name = sessionStorage.getItem('name');
        if (name !== null) $('#username').val(name);
       
       

        var email = sessionStorage.getItem('email');
        if (email !== null) $('#email').val(email);
    }

    // Before refreshing the page, save the form data to sessionStorage
    window.onbeforeunload = function() {
        sessionStorage.setItem('name', $('#username').val());
        sessionStorage.setItem('email', $('#email').val());
    }
</script>

{{/if}}
     <form action="/register" method="POST" >
       {{# if  erun}}
  <span style="color:red;  vertical-align:middle;  text-align: center; width: 100%; display: block;margin : 0 auto;" >Username already in use</span>
 {{else if erem}}
 <span style="color:red;  vertical-align:middle;  text-align: center; width: 100%; display: block;margin : 0 auto;" >Email already in use</span>
